// Uisng 2 variables for tracking the largest element and second-largest element.

int secondlargest(vector<int> &a,int n)
{
    int largest = a[0];
    int slargest = INT_MIN;

    for(int i=1; i<n; i++)
    {
        if(a[i] > largest)
        {
            slargest = largest;  // previous largest becomes second largest
            largest = a[i];      // update largest
        }
        else if(a[i] < largest && a[i] > slargest)  // when a[i] is smaller than largest but bigger than slargest
        {
            slargest = a[i];  
        }
    }
    return slargest;
}

int secondsmallest(vector<int> &a,int n)
{
    int smallest = a[0];
    int ssmallest = INT_MAX;

    for(int i=1; i<n; i++)
    {
        if(a[i] < smallest)
        {
            ssmallest = smallest;  // previous smallest becomes second smallest
            smallest = a[i];       // update smallest
        }
        else if(a[i] > smallest && a[i] < ssmallest)  // when current element is gretaer than smallest but smaller than secondsmaller
        {
            ssmallest = a[i]; 
        }
    }
    return ssmallest;
}

Time Complexity: O(n)
Space Complexity: O(1)
