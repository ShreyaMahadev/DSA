class Solution {
public:
    int reverse(int x) {
        long long rev = 0; // use long long to detect overflow
        while (x != 0) {
            int digit = x % 10;   // extract last digit
            rev = rev * 10 + digit; 
            if (rev > INT_MAX || rev < INT_MIN)  //Checking the overflow or underflow condition
                return 0; 
            
            x /= 10; // remove last digit
        }
        return (int)rev;
    }
};
