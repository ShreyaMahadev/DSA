#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    bool isPalindrome(string s) {
        string filtered;
        
        // Keep only alphanumeric characters and convert to lowercase
        for (char ch : s) {
            if (isalnum(ch)) 
                filtered += tolower(ch);    //Convert to lower case
        }
        
        // Check if the filtered string is a palindrome
        int n = filtered.size();
        int st=0;
        int e=n-1;
        while(st<=e){
            if(filtered[st]!=filtered[e])
                return false;
            st++;
            e--;
        }
        return true;
    }
};
